<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Posted by {{user.username}} on {{format_date date_created}}</p>
  
  {{#if logged_in}}
  {{#if comments.length}}
</div>
<div>
  <h2>Comments</h2>
  {{#each comments as |comment|}}
  <p>{{comment.comment_text}}</p>
  <p>Commented by {{user.username}} on {{format_date comment.date_created}}</p>
  <div class="col-md-4">
    <button class="btn btn-sm btn-danger delete" data-id="{{comment.id}}">Delete Comment</button>
  </div>
  {{/each}}

  {{else}}
  <p>No comments yet. Add one!</p>
  {{/if}}

  <form class="form new-comment mt-4">
    <div class="form-group">
      <label for="comment-input">Your Comment Here</label>
      <input class="form-input" type="text" id="comment" name="comment-input"/>
      <button class="btn btn-primary postBtn" type="submit" data-id="{{id}}">Post Comment</button>
    </div>
  </form>
  

  {{#if match}}
    <div class="row mb-2">
      <div class="col-md-12">
        <h3>Update Your Post</h3>
        <form class="form new-post-form">
          <div class="form-group">
            <label for="post-name-update">Post name:</label>
            <input class="form-input" type="text" id="post-name-update" name="post-name-update" />
          </div>
          <div class="form-group">
            <label for="post-desc-updates">description:</label>
            <textarea class="form-input" id="post-desc-update" name="post-desc-update"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-sm btn-secondary updateBtn" update-id="{{id}}">UPDATE</button>
          </div>
        </form>
      </div>
    </div>
</div>
{{/if}}
</div>
<script src="/js/post.js"></script>